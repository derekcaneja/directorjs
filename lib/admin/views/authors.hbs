<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2 class="sub-header">Authors</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Social Media</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
              	{{#each authors}}
	                <tr>
						<td>{{name}}</td>
						<td>
                            {{#each social_media}}
                                <a href="{{url}}"><i class="fa fa-{{type}}"></i>{{display}}</a>
                            {{/each}}
                        </td>
						<td><a href="/edit_author?id={{id}}"   class="btn">Edit</a></td>
                        <td><a href="/delete_author?id={{id}}" class="btn">Remove</a></td>
	                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

