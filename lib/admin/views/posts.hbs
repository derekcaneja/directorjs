<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2 class="sub-header">Posts</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Timestamp</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each posts}}
                    <tr>
                        <td>{{post_number @index}}</td>
                        <td>{{title}}</td>
                        <td>{{author}}</td>
                        <td>{{timestamp}}</td>
                        <td><a href="/edit_post?id={{id}}"   class="btn">Edit</a></td>
                        <td><a href="/delete_post?id={{id}}" class="btn">Remove</a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

